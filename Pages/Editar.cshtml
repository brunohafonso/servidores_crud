@page "{Id:int}"
@model cadastrodeservidores.Pages.EditarModel
@{
    ViewData["title"] = "Editar";
}

<h2>
    Cadastro de Servidores
</h2>

<h3>
    Dados Pessoais
</h3>
<form method="POST">
     <div class="form-group">
         <input asp-for="Servidor.Id" type="hidden"/>
     </div>
    <div class="form-group">
        <label for="Servidor.Nome">Nome</label>
        <input asp-for="Servidor.Nome" type="text" class="form-control" placeholder="Digite o nome do servidor">
        <span asp-validation-for="Servidor.Nome"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.Email">Email</label>
        <input asp-for="Servidor.Email" type="email" class="form-control" placeholder="Digite o email do servidor">
        <span asp-validation-for="Servidor.Email"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.DataNascimento">Data de Nascimento</label>
        <input asp-for="Servidor.DataNascimento" type="date" class="form-control">
        <span asp-validation-for="Servidor.DataNascimento"></span>
    </div>
    <h3>
        Endereço
    </h3>
    <div class="form-group">
        <label for="Servidor.Endereco.Tipo">Tipo de endereço</label>
        <input asp-for="Servidor.Endereco.Tipo" type="text" class="form-control" placeholder="Rua, Avenida e etc.">
        <span asp-validation-for="Servidor.Endereco.Tipo"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.Endereco.Lograduro">Logradouro</label>
        <input asp-for="Servidor.Endereco.Logradouro" type="text" class="form-control" placeholder="Digite o logradouro">
        <span asp-validation-for="Servidor.Endereco.Logradouro"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.Endereco.Numero">Número</label>
        <input asp-for="Servidor.Endereco.Numero" type="number" class="form-control" placeholder="Digite o numero do endereço">
        <span asp-validation-for="Servidor.Endereco.Numero"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.Endereco.Complemento">Complemento</label>
        <input asp-for="Servidor.Endereco.Complemento" type="text" class="form-control" placeholder="Digite o complemento do endereço">
        <span asp-validation-for="Servidor.Endereco.Complemento"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.Endereco.CEP">CEP</label>
        <input asp-for="Servidor.Endereco.CEP" type="text" class="form-control" placeholder="Digite o CEP do endereço">
        <span asp-validation-for="Servidor.Endereco.CEP"></span>
    </div>
    <h3>
        Dados Funcionais
    </h3>
    <div class="form-group">
        <label for="Servidor.RF">RF</label>
        <input asp-for="Servidor.RF" class="form-control" placeholder="Digite o RF do servidor">
        <span asp-validation-for="Servidor.RF"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.Vinculo">Vinculo</label>
        <input asp-for="Servidor.Vinculo" type="number" class="form-control" placeholder="Digite o Vinculo do servidor">
        <span asp-validation-for="Servidor.Vinculo"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.Cargo">Cargo</label>
        <input asp-for="Servidor.Cargo" type="text" class="form-control" placeholder="Digite o cargo do servidor">
        <span asp-validation-for="Servidor.Cargo"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.UnidadeLotacao">Unidade de Lotação</label>
        <input asp-for="Servidor.UnidadeLotacao" type="text" class="form-control" placeholder="Digite a unidade de lotação do servidor">
        <span asp-validation-for="Servidor.UnidadeLotacao"></span>
    </div>
    <div class="form-group">
        <label for="Servidor.UnidadeExercicio">Unidade de Exercicio</label>
        <input asp-for="Servidor.UnidadeExercicio" type="text" class="form-control" placeholder="Digite a unidade de exercicio do servidor">
        <span asp-validation-for="Servidor.UnidadeExercicio"></span> 
    </div>
    <div class="form-group">
        <input type="submit">
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}